<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/iv_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/prb_00"
        style="?android:attr/progressBarStyle"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:max="5"
        app:layout_constraintBottom_toBottomOf="@+id/iv_00"
        app:layout_constraintEnd_toEndOf="@+id/iv_00"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/iv_00"
        app:layout_constraintTop_toTopOf="@+id/iv_00"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_00"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="4dp"
        android:text="点击跳过"
        app:layout_constraintBottom_toBottomOf="@+id/prb_00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/prb_00"
        app:layout_constraintTop_toTopOf="@+id/prb_00" />


</androidx.constraintlayout.widget.ConstraintLayout>